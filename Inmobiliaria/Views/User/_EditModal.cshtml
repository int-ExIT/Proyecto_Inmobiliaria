@* 
  ASP.NET Core MVP ofrece herramintas como las "partials" para crear elemento HTML 
  que lugo podran ser implementados en distintas vistas a modo de elementos. Vienen siendo
  como los complementos credos por React/Preact/Astro. Por convencion se las nombra con "_"
  al principio del nombre.    
*@

@model Inmobiliaria.Models.ViewModels.UserEditVm

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editar Usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>

      <div class="modal-body text-start bg-dark text-white">
        <form asp-action="Edit" asp-controller="User" method="POST" id="edit-form">
          @Html.AntiForgeryToken()

          <input type="hidden" asp-for="Dni" />

          <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Mail" class="form-label"></label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Contact" class="form-label"></label>
            <input asp-for="Contact" class="form-control" />
          </div>

          <div class="mb-3">
            <label asp-for="Rol" class="form-label"></label>
            <input asp-for="Rol" class="form-control" readonly />
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>